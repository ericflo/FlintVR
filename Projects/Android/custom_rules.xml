<?xml version="1.0" encoding="UTF-8"?>
<project name="custom_rules">
  <property name="vrapi_lib"            value="../../../../../VrApi/Libs/Android/" />
  <property name="vrappframework_lib"   value="../../../../../VrAppFramework/Libs/Android/" />
  <property name="vrappframework_res"   value="../../../../../VrAppFramework/res/" />
  <property name="vrgui_res"   			value="../../../../../VrAppSupport/VrGUI/res/" />
  <target name="-pre-compile">
    <!-- <echo>project.all.jars.path="${toString:project.all.jars.path}"</echo> -->
    <path id="temp.path">
      <pathelement path="${toString:project.all.jars.path}"/>
    </path>
    <!-- <echo>temp="${toString:temp.path}"</echo> -->
    <path id="project.all.jars.path">
      <pathelement path="${toString:temp.path}"/>
      <pathelement location="${vrapi_lib}/VrApi.jar"/>
      <pathelement location="${vrappframework_lib}/VrAppFramework.jar"/>
    </path>
    <!-- <echo>project.all.jars.path="${toString:project.all.jars.path}"</echo> -->

    <!-- <echo>project.library.res.folder.path="${toString:project.library.res.folder.path}"</echo> -->
    <path id="temp.project.library.res.folder.path">
      <pathelement path="${toString:project.library.res.folder.path}"/>
    </path>
    <!-- <echo>temp="${toString:temp.project.library.res.folder.path}"</echo> -->
    <path id="project.library.res.folder.path">
      <pathelement location="${vrappframework_res}"/>
	  <pathelement location="${vrgui_res}"/>
      <pathelement path="${toString:temp.project.library.res.folder.path}"/>
    </path>
    <!-- <echo>project.library.res.folder.path="${toString:project.library.res.folder.path}"</echo> -->
  </target>
</project>
